    <category>
        <pattern>*</pattern>
     <that>* * MAKE YOUR LAST GUESS</that>
        <template>
         <srai>CHECK FOR ANSWER <star/></srai>
          <condition name="WrongOrRight">
                <li value="wrong">
                Ahhh, you did not guess it in time. I was thinking about <get name="thoughtgame"></get>.</li>
                </condition>
        </template>
    </category>
    

#thoughtgame hints    
