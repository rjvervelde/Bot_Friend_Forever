        <pattern>THOUGHTGAME HINT 1</pattern>
        <template>
            <condition name="thoughtgame">
                <li value="grapefruit">Hint: It's round.</li>
                <li value="cherry">Hint: It's round.</li>
                <li value="pear">Hint: it's green.</li>
            </condition>
        </template>
    </category>
    
